<LinearLayout android:layout_width="fill_parent" android:orientation="vertical" android:layout_below="@id/GameSetupTitle" android:background="@color/genericBG_trim" android:id="@+id/GameSetup_TeamLayout" android:layout_height="fill_parent">Background	


<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/TurnSummary_TopTwoTeams"><LinearLayout android:id="@+id/TurnSummary_Scores_TeamA" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_weight="1" android:background="@color/genericBG" android:layout_marginTop="4dp" android:layout_marginLeft="4dp" android:layout_marginRight="2dp" android:layout_marginBottom="2dp"><TextView android:text="8" android:id="@+id/TurnSummary_Scores_TeamANum" android:textColor="@color/teamA_text" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_weight="1" android:layout_gravity="top" android:gravity="top|center_horizontal" android:textSize="60dp"></TextView><TextView android:textColor="@color/teamA_text" android:id="@+id/TurnSummary_Scores_TeamAName" android:text="Blue" android:layout_height="fill_parent" android:layout_width="80dp" android:layout_weight="0" android:gravity="top|center_horizontal" android:textSize="24dp"></TextView></LinearLayout><LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_weight="1" android:background="@color/genericBG" android:id="@+id/TurnSummary_Scores_TeamB" android:layout_marginTop="4dp" android:layout_marginLeft="2dp" android:layout_marginRight="4dp" android:layout_marginBottom="2dp"><TextView android:layout_height="fill_parent" android:id="@+id/TurnSummary_Scores_TeamBName" android:text="Green" android:textColor="@color/teamB_text" android:layout_weight="0" android:layout_width="90dp" android:textSize="24dp" android:gravity="top|center_horizontal"></TextView><TextView android:layout_height="fill_parent" android:layout_weight="1" android:layout_gravity="top" android:gravity="top|center_horizontal" android:textSize="60dp" android:id="@+id/TurnSummary_Scores_TeamBNum" android:text="12" android:textColor="@color/teamB_text" android:layout_width="fill_parent"></TextView></LinearLayout>



</LinearLayout><LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/TurnSummary_BottomTwoTeams"><LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_weight="1" android:background="@color/genericBG" android:id="@+id/TurnSummary_Scores_TeamC" android:layout_marginBottom="4dp" android:layout_marginLeft="4dp" android:layout_marginRight="2dp" android:layout_marginTop="2dp"><TextView android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_weight="1" android:layout_gravity="top" android:gravity="top|center_horizontal" android:textSize="60dp" android:id="@+id/TurnSummary_Scores_TeamCNum" android:text="4" android:textColor="@color/teamC_text"></TextView><TextView android:layout_height="fill_parent" android:layout_width="80dp" android:layout_weight="0" android:textColor="@color/teamC_text" android:text="Red" android:id="@+id/TurnSummary_Scores_TeamCName" android:textSize="24dp" android:gravity="bottom|center_horizontal"></TextView></LinearLayout><LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_weight="1" android:background="@color/genericBG" android:id="@+id/TurnSummary_Scores_TeamD" android:layout_marginBottom="4dp" android:layout_marginLeft="2dp" android:layout_marginTop="2dp" android:layout_marginRight="4dp"><TextView android:layout_height="fill_parent" android:layout_weight="0" android:gravity="bottom|center_horizontal" android:id="@+id/TurnSummary_Scores_TeamDName" android:text="Yellow" android:textColor="@color/teamD_text" android:layout_width="80dp" android:textSize="24dp"></TextView><TextView android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_weight="1" android:layout_gravity="top" android:gravity="top|center_horizontal" android:textSize="60dp" android:textColor="@color/teamD_text" android:text="10" android:id="@+id/TurnSummary_Scores_TeamDNum"></TextView></LinearLayout>

</LinearLayout>
</LinearLayout><RelativeLayout android:layout_centerInParent="true" android:layout_height="35dp" android:layout_width="100dp" android:id="@+id/TurnSummary_SubHeader_Score"><View android:background="@color/genericBG_trim" android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/TurnSummary_SubHeader_Scores_BG"></View><View android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@color/genericBG" android:layout_margin="4dp" android:id="@+id/TurnSummary_SubHeader_Scores_Fill"></View><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:textSize="20dp" android:textColor="#FFFFFF" android:id="@+id/TurnSummary_SubHeader_Scores_Text" android:text="Scores"></TextView>
