<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TurnSumNoCards" android:text="No Words Completed" android:textSize="18dp" android:layout_centerHorizontal="true" android:layout_marginTop="80dp"></TextView><ScrollView android:id="@+id/TurnSumCardList" android:paddingTop="10dip" android:layout_below="@id/TurnSummaryTitle" android:layout_width="fill_parent" android:layout_height="175dp">



