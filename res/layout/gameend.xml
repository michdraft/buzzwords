<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_generic">
    
    <RelativeLayout android:id="@+id/GameEnd_HeaderGroup"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true">
         
        <View android:id="@+id/GameEnd_HeaderBG"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:background="@color/genericBG_trimDark"
            />
            
        <View android:id="@+id/GameEnd_HeaderBreak"
            android:layout_width="fill_parent"
            android:background="#555555"
            android:layout_marginTop="1dp"
            android:layout_height="2dp"
            android:layout_below="@id/GameEnd_HeaderBG"
            />
            
        <TextView android:id="@+id/GameEnd_Title"
            android:layout_height="wrap_content"
            android:textColor="@color/title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:textSize="28dp"
            android:text="Final Standings"
            android:includeFontPadding="false"
            />
            
    </RelativeLayout>

    <Button android:id="@+id/GameEnd_Rematch"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Rematch"
        android:layout_height="60dp"
        />
        
    <Button android:id="@+id/GameEnd_MainMenu"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Main Menu"
        android:layout_height="60dp"
         />

    <LinearLayout android:id="@+id/GameEnd_FinalStandings"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/GameEnd_HeaderGroup"
        android:layout_marginTop="2dp"
        android:background="@color/genericBG_trimDark" android:layout_height="wrap_content">
        
        <com.buzzwords.ScoreboardRowLayout android:layout_width="fill_parent" android:id="@+id/GameEnd_Scores_1" android:layout_height="30dp"></com.buzzwords.ScoreboardRowLayout>
        <com.buzzwords.ScoreboardRowLayout android:layout_width="fill_parent" android:id="@+id/GameEnd_Scores_2" android:layout_height="30dp"></com.buzzwords.ScoreboardRowLayout>
        <com.buzzwords.ScoreboardRowLayout android:layout_width="fill_parent" android:id="@+id/GameEnd_Scores_3" android:layout_height="30dp"></com.buzzwords.ScoreboardRowLayout>
        <com.buzzwords.ScoreboardRowLayout android:layout_width="fill_parent" android:id="@+id/GameEnd_Scores_4" android:layout_height="30dp"></com.buzzwords.ScoreboardRowLayout>
        
        <View android:id="@+id/GameEnd_HeaderBreak"
            android:layout_width="fill_parent"
            android:background="#555555"
            android:layout_height="2dp"
            android:layout_below="@id/GameEnd_HeaderBG"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>
    
    <TextView android:id="@+id/GameEnd_WinnerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/GameEnd_FinalStandings"
        android:layout_centerHorizontal="true"
        android:text="Green Wins!"
        android:textSize="40dp"
        android:textColor="@color/teamB_primary"
        />

    <RelativeLayout android:id="@+id/GameEnd_GameOverGroup"
        android:layout_height="wrap_content"
        android:layout_below="@id/GameEnd_WinnerText"
        android:layout_centerInParent="true"
        android:layout_width="225dp">
        
        <TextView android:id="@+id/GameEnd_GameOver_Game"
            android:layout_height="wrap_content"
            android:text="Game"
            android:textSize="80dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:textColor="#FFFFFF"
            />
            
        <View android:id="@+id/GameEnd_GameOver_Break"
            android:layout_height="10dp"
            android:layout_alignTop="@id/GameEnd_GameOver_Game"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="103dp"
            android:layout_width="160dp"
            android:background="#FFFFFF"
            />
            
        <TextView android:id="@+id/GameEnd_GameOver_Over"
            android:layout_height="wrap_content"
            android:text="Over!"
            android:textSize="80dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/GameEnd_GameOver_Game"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:textColor="#FFFFFF"
            />
            
    </RelativeLayout>
    
</RelativeLayout>
