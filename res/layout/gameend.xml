<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_generic">
    
    <RelativeLayout android:id="@+id/GameEnd_HeaderGroup"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true">
         
        <View android:id="@+id/GameEnd_HeaderBG"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:background="@color/genericBG_trimDark"
            />
            
        <View android:id="@+id/GameEnd_HeaderBreak"
            android:layout_width="fill_parent"
            android:background="#555555"
            android:layout_marginTop="1dp"
            android:layout_height="2dp"
            android:layout_below="@id/GameEnd_HeaderBG"
            />
            
        <TextView android:id="@+id/GameEnd_Title"
            android:layout_height="wrap_content"
            android:textColor="@color/title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:textSize="28dp"
            android:text="Final Standings"
            android:includeFontPadding="false"
            />
            
    </RelativeLayout>

    <Button android:id="@+id/GameEnd_Rematch"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Rematch"
        android:layout_height="60dp"
        />
        
    <Button android:id="@+id/GameEnd_MainMenu"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Main Menu"
        android:layout_height="60dp"
         />

    <LinearLayout android:id="@+id/GameEnd_FinalStandings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/GameEnd_HeaderGroup"
        android:layout_marginTop="2dp"
        android:background="@color/genericBG_trimDark">
        
        <RelativeLayout android:id="@+id/GameEnd_Scores_1"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:background="@color/black"
            android:layout_height="30dp">

            <View android:id="@+id/GameEnd_Scores_1_BG"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/teamB_primary"
                />
                
            <TextView android:id="@+id/GameEnd_Scores_1_place"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_width="50dp"
                android:text="1st"
                android:layout_centerVertical="true"
                />
                
            <TextView android:id="@+id/GameEnd_Scores_1_name"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/GameEnd_Scores_1_place"
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:textSize="24dp"
                android:text="Green"
                android:textColor="@color/black"
                />

            <ImageView android:id="@+id/GameEnd_Scores_1_end"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gameend_row_end_green"
                />
                
            <TextView android:id="@+id/GameEnd_Scores_1_score"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_width="50dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/teamB_primary"
                android:includeFontPadding="false"
                android:text="12"
                android:textSize="25dp"
                />

        </RelativeLayout>
        
        <RelativeLayout android:id="@+id/GameEnd_Scores_2"
            android:layout_width="fill_parent"
            android:background="@color/black"
            android:layout_height="30dp">

            <View android:id="@+id/GameEnd_Scores_2_BG"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/teamA_primary"
                />
                
            <TextView android:id="@+id/GameEnd_Scores_2_place"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_width="50dp"
                android:text="2nd"
                android:layout_centerVertical="true"
                />
                
            <TextView android:id="@+id/GameEnd_Scores_2_name"
                android:layout_height="wrap_content"
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:textSize="24dp"
                android:text="Blue"
                android:layout_toRightOf="@id/GameEnd_Scores_2_place"
                android:textColor="@color/black"
                />

            <ImageView android:id="@+id/GameEnd_Scores_2_end"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gameend_row_end_blue"
                />
                
            <TextView android:id="@+id/GameEnd_Scores_2_score"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textColor="@color/teamA_primary"
                android:textSize="25dp"
                android:layout_width="50dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:text="10"
                android:includeFontPadding="false"
                />

        </RelativeLayout>
        
        <RelativeLayout android:id="@+id/GameEnd_Scores_3"
            android:layout_width="fill_parent"
            android:background="@color/black"
            android:layout_height="30dp">

            <View android:id="@+id/GameEnd_Scores_3_BG"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/teamC_primary"
                />
                
            <TextView android:id="@+id/GameEnd_Scores_3_place"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_width="50dp"
                android:layout_centerVertical="true"
                android:text="3rd"
                />
                
            <TextView android:id="@+id/GameEnd_Scores_3_name"
                android:layout_height="wrap_content"
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:textSize="24dp"
                android:text="Red"
                android:layout_toRightOf="@id/GameEnd_Scores_3_place"
                android:textColor="@color/black"
                />

            <ImageView android:id="@+id/GameEnd_Scores_3_end"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gameend_row_end_red"
                />
                
            <TextView android:id="@+id/GameEnd_Scores_3_score"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textSize="25dp"
                android:layout_width="50dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/teamC_primary"
                android:text="6"
                android:includeFontPadding="false"
                />

        </RelativeLayout>
        
        <RelativeLayout android:id="@+id/GameEnd_Scores_4"
            android:layout_width="fill_parent"
            android:background="@color/black"
            android:layout_height="30dp">

            <View android:id="@+id/GameEnd_Scores_4_BG"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/teamD_primary"
                />
                
            <TextView android:id="@+id/GameEnd_Scores_4_place"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_width="50dp"
                android:layout_centerVertical="true"
                android:text="4th"
                />
                
            <TextView android:id="@+id/GameEnd_Scores_4_name"
                android:layout_height="wrap_content"
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:textSize="24dp"
                android:text="Yellow"
                android:layout_toRightOf="@id/GameEnd_Scores_4_place"
                android:textColor="@color/black"
                />

            <ImageView android:id="@+id/GameEnd_Scores_4_end"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gameend_row_end_yellow"
                />
                
            <TextView android:id="@+id/GameEnd_Scores_4_score"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textSize="25dp"
                android:layout_width="50dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:text="3"
                android:textColor="@color/teamD_primary"
                android:includeFontPadding="false" 
                />

        </RelativeLayout>
        
        <View android:id="@+id/GameEnd_HeaderBreak"
            android:layout_width="fill_parent"
            android:background="#555555"
            android:layout_height="2dp"
            android:layout_below="@id/GameEnd_HeaderBG"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>
    
    <TextView android:id="@+id/GameEnd_WinnerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/GameEnd_FinalStandings"
        android:layout_centerHorizontal="true"
        android:text="Green Wins!"
        android:textSize="40dp"
        android:textColor="@color/teamB_primary"
        />

    <RelativeLayout android:id="@+id/GameEnd_GameOverGroup"
        android:layout_height="wrap_content"
        android:layout_below="@id/GameEnd_WinnerText"
        android:layout_centerInParent="true"
        android:layout_width="225dp">
        
        <TextView android:id="@+id/GameEnd_GameOver_Game"
            android:layout_height="wrap_content"
            android:text="Game"
            android:textSize="80dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:textColor="#FFFFFF"
            />
            
        <View android:id="@+id/GameEnd_GameOver_Break"
            android:layout_height="10dp"
            android:layout_alignTop="@id/GameEnd_GameOver_Game"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="103dp"
            android:layout_width="160dp"
            android:background="#FFFFFF"
            />
            
        <TextView android:id="@+id/GameEnd_GameOver_Over"
            android:layout_height="wrap_content"
            android:text="Over!"
            android:textSize="80dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/GameEnd_GameOver_Game"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:textColor="#FFFFFF"
            />
            
    </RelativeLayout>
    
</RelativeLayout>
