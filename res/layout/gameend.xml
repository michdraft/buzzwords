<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_generic">
    
    <RelativeLayout android:id="@+id/GameEnd_HeaderGroup"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true">
         
        <View android:id="@+id/GameEnd_HeaderBG"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:background="@color/genericBG_trimDark"
            />
            
        <TextView android:id="@+id/GameEnd_Title"
            android:layout_height="wrap_content"
            android:textColor="@color/title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:textSize="28dp"
            android:text="Final Standings"
            android:includeFontPadding="false"
            />
            
    </RelativeLayout>

    <Button android:id="@+id/GameEnd_Rematch"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Rematch"
        android:layout_height="60dp"
        />
        
    <Button android:id="@+id/GameEnd_MainMenu"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Main Menu"
        android:layout_height="60dp"
         />

    <LinearLayout android:id="@+id/GameEnd_FinalStandings"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/GameEnd_HeaderGroup"
        android:layout_height="wrap_content" android:background="@color/black" android:paddingTop="1dp" android:paddingBottom="1dp">
        
        <com.buzzwords.ScoreboardRowLayout android:layout_width="fill_parent" android:id="@+id/GameEnd_Scores_1" android:layout_height="30dp"></com.buzzwords.ScoreboardRowLayout>
        <com.buzzwords.ScoreboardRowLayout android:layout_width="fill_parent" android:id="@+id/GameEnd_Scores_2" android:layout_height="30dp"></com.buzzwords.ScoreboardRowLayout>
        <com.buzzwords.ScoreboardRowLayout android:layout_width="fill_parent" android:id="@+id/GameEnd_Scores_3" android:layout_height="30dp"></com.buzzwords.ScoreboardRowLayout>
        <com.buzzwords.ScoreboardRowLayout android:layout_width="fill_parent" android:id="@+id/GameEnd_Scores_4" android:layout_height="30dp"></com.buzzwords.ScoreboardRowLayout>

    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_below="@id/GameEnd_FinalStandings" android:id="@+id/GameEnd_WinnerGroup">
        <TextView android:layout_width="wrap_content" android:text="Winner:" android:id="@+id/GameEnd_Winner" android:layout_height="wrap_content" android:textSize="32dp" android:layout_gravity="center"></TextView>
        <TextView android:layout_width="fill_parent" android:text="Green Wins!" android:id="@+id/GameEnd_WinnerText" android:gravity="center_horizontal" android:textSize="50dp" android:textColor="@color/teamB_primary" android:layout_height="225dp"></TextView>
    </LinearLayout>
    
</RelativeLayout>
