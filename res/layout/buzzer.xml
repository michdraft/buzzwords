<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/bg_generic" android:layout_width="fill_parent" android:orientation="vertical" android:layout_height="fill_parent">
	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/Buzzer_Word"
		android:layout_gravity="center" android:layout_marginTop="20dp" android:background="@drawable/buzzer_title"></ImageView>
	<ImageButton android:layout_width="wrap_content"
		android:id="@+id/BuzzerButton" android:background="@drawable/buzzer_button" android:layout_gravity="center" android:layout_marginTop="10dp" android:layout_height="wrap_content"></ImageButton>
	

</LinearLayout>
