<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" 
  android:layout_height="fill_parent" 
  android:background="@drawable/bg_turnsummary">
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:text="Start Game" android:id="@+id/StartGameButton"></Button>

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:textSize="26px" android:layout_marginTop="5dip" android:layout_marginLeft="20dip" android:text="Game Setup" android:id="@+id/GameSetupTitle"></TextView>









<TextView android:layout_height="wrap_content" android:id="@+id/GameSetupTeamHeader" android:text="Teams" android:textColor="#000000" android:layout_below="@id/GameSetupTitle" android:textSize="20px" android:layout_width="fill_parent" android:layout_marginTop="10px" android:background="#899BA8" android:layout_marginLeft="2px" android:layout_marginRight="2px"></TextView>

<LinearLayout android:layout_below="@id/GameSetupTeamHeader" android:layout_height="wrap_content" android:id="@+id/TeamLayout" android:layout_width="fill_parent" android:orientation="vertical">Background	<EditText android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="5px" android:lines="1" android:inputType="text" android:maxLength="25" android:text="Red Team" android:id="@+id/SetTeamNameA"></EditText><EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:inputType="text" android:lines="1" android:maxLength="25" android:text="Blue Team" android:id="@+id/SetTeamNameB"></EditText>
<ViewFlipper android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/AddTeamCFlipper"><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Add Team" android:id="@+id/AddTeamCButton"></Button><EditText android:layout_height="wrap_content" android:id="@+id/SetTeamNameC" android:text="Yellow Team" android:layout_width="fill_parent" android:lines="1" android:inputType="text" android:maxLength="25"></EditText>




</ViewFlipper><ViewFlipper android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/AddTeamDFlipper" android:visibility="invisible">




<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/AddRemoveTeamLayout"><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Add Team" android:id="@+id/AddTeamDButton"></Button><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/RemoveTeamCButton" android:text="Remove Team"></Button>

</LinearLayout><LinearLayout android:layout_height="wrap_content" android:id="@+id/SetTeamDNameLayout" android:orientation="vertical" android:layout_width="fill_parent"><EditText android:layout_height="wrap_content" android:text="Purple Team" android:layout_width="fill_parent" android:id="@+id/SetTeamNameD" android:lines="1" android:maxLength="25" android:inputType="text"></EditText><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/RemoveTeamDButton" android:text="Remove Team"></Button></LinearLayout></ViewFlipper>

</LinearLayout>
</RelativeLayout>
