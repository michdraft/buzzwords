<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/bg_bluegradient" android:id="@+id/Turn_Root">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/TurnTimesUp"
		android:layout_centerHorizontal="true" android:layout_centerVertical="true"
		android:textSize="60dp" android:textStyle="bold" android:text="Time's Up!"
		android:gravity="center" android:visibility="invisible"></TextView>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/Turn_PauseTextGroup" android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_centerInParent="true"
		android:visibility="invisible">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="60dp"
			android:textStyle="bold" android:id="@+id/TurnPausedText"
			android:text="Paused" android:layout_gravity="center"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textStyle="bold"
			android:id="@+id/TurnPausedSubText" android:textSize="20dp"
			android:layout_gravity="center" android:text="Tap to Unpause"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:orientation="vertical"
		android:id="@+id/Turn_MasterLayout">
		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="35dp" android:id="@+id/Turn_TimerBar">
			<ImageView android:id="@+id/TurnTimerBG"
				android:background="@color/genericBG" android:layout_width="fill_parent"
				android:layout_height="25dp"></ImageView>



			<View android:layout_height="10dp" android:layout_width="fill_parent"
				android:background="@color/genericBG_trim" android:id="@+id/TurnTimerTrim"
				android:layout_below="@id/TurnTimerBG"></View>

			<ImageView android:id="@+id/TurnTimerFill"
				android:layout_below="@+id/TurnTimerBG"
				android:layout_alignParentTop="true" android:background="@color/teamA_text"
				android:layout_height="23dp" android:layout_marginTop="1dp"
				android:layout_alignParentLeft="true" android:layout_width="280dp"></ImageView>
			<View android:id="@+id/Turn_TimerFrame" android:layout_height="25dp"
				android:background="@drawable/turn_timer_frame"
				android:layout_width="70dp" android:layout_alignParentRight="true"></View>
			<TextView android:layout_width="wrap_content" android:id="@+id/Timer"
				android:layout_alignParentRight="true" android:textColor="#FFFFFF"
				android:layout_alignParentTop="true" android:gravity="center"
				android:layout_marginRight="4dp" android:includeFontPadding="false"
				android:layout_height="24dp" android:textSize="22dp">
			</TextView>
		</RelativeLayout>
		<ViewFlipper android:id="@+id/ViewFlipper0"
			android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="fill_parent">
			<LinearLayout android:id="@+id/CardLayoutA"
				android:orientation="vertical" android:layout_width="fill_parent" android:layout_gravity="center" android:layout_height="fill_parent">
				<RelativeLayout android:layout_width="wrap_content" android:layout_gravity="center" android:id="@+id/CardATitleBar" android:layout_height="wrap_content">
					<TextView android:gravity="center" android:id="@+id/CardTitleA"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textStyle="bold" android:typeface="serif"
						android:textSize="40dp" android:paddingTop="10dp"
						android:paddingBottom="10dp" android:textColor="#FFFFFF" android:layout_centerInParent="true">
					</TextView>
					<ImageView android:id="@+id/StatusImageA" android:layout_width="50dip"
						android:layout_height="50dip" android:layout_alignParentRight="true"></ImageView>
				</RelativeLayout>
			
			
			



				<LinearLayout android:id="@+id/CardA_BadWords" android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical" android:layout_gravity="center"><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="34dp" android:textStyle="bold" android:textColor="@color/teamA_CardText" android:id="@+id/CardA_BadWord0" android:gravity="center" android:layout_weight="1" android:layout_gravity="center_horizontal"></TextView><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="34dp" android:textStyle="bold" android:textColor="@color/teamA_CardText" android:id="@+id/CardA_BadWord1" android:gravity="center" android:layout_weight="1" android:layout_gravity="center_horizontal"></TextView><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="34dp" android:textStyle="bold" android:textColor="@color/teamA_CardText" android:id="@+id/CardA_BadWord2" android:gravity="center" android:layout_weight="1" android:layout_gravity="center_horizontal"></TextView><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="34dp" android:textStyle="bold" android:textColor="@color/teamA_CardText" android:id="@+id/CardA_BadWord3" android:gravity="center" android:layout_weight="1" android:layout_gravity="center_horizontal"></TextView><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="34dp" android:textStyle="bold" android:textColor="@color/teamA_CardText" android:id="@+id/CardA_BadWord4" android:gravity="center" android:layout_weight="1" android:layout_gravity="center_horizontal"></TextView>
</LinearLayout>
			</LinearLayout>
			<LinearLayout android:id="@+id/CardLayoutB"
				android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_gravity="center">
				<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_gravity="center" android:id="@+id/CardATitleBar">
					
					
				<TextView android:gravity="center" android:id="@+id/CardTitleB" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:textColor="#FFF" android:textStyle="bold" android:typeface="serif" android:textSize="40dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_centerInParent="true">
				</TextView><ImageView android:layout_alignParentTop="true" android:id="@+id/StatusImageB" android:layout_height="50dip" android:layout_width="50dip" android:layout_alignParentRight="true"></ImageView></RelativeLayout>
				
				<LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical" android:id="@+id/CardB_BadWords"><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="34dp" android:textStyle="bold" android:textColor="@color/teamA_CardText" android:gravity="center" android:layout_weight="1" android:id="@+id/CardB_BadWord0" android:layout_gravity="center_horizontal"></TextView><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="34dp" android:textStyle="bold" android:textColor="@color/teamA_CardText" android:gravity="center" android:layout_weight="1" android:id="@+id/CardB_BadWord1" android:layout_gravity="center_horizontal"></TextView><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="34dp" android:textStyle="bold" android:textColor="@color/teamA_CardText" android:gravity="center" android:layout_weight="1" android:id="@+id/CardB_BadWord2" android:layout_gravity="center_horizontal"></TextView><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="34dp" android:textStyle="bold" android:textColor="@color/teamA_CardText" android:gravity="center" android:layout_weight="1" android:id="@+id/CardB_BadWord3" android:layout_gravity="center_horizontal"></TextView><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="34dp" android:textStyle="bold" android:textColor="@color/teamA_CardText" android:gravity="center" android:layout_weight="1" android:id="@+id/CardB_BadWord4" android:layout_gravity="center_horizontal"></TextView>
</LinearLayout>

			</LinearLayout>
	
</ViewFlipper>
		<RelativeLayout android:layout_alignParentBottom="true"
			android:layout_width="fill_parent" android:layout_height="90dp"
			android:id="@+id/Turn_LowBar">



			<View android:layout_width="fill_parent" android:background="@color/genericBG"
				android:id="@+id/TurnLowBarBG" android:layout_marginTop="40dp"
				android:layout_alignParentBottom="true" android:layout_height="45dp"></View>
			<View android:layout_height="10dp" android:layout_width="fill_parent"
				android:background="@color/genericBG_trim" android:id="@+id/TurnLowBarTrim"
				android:layout_alignTop="@id/TurnLowBarBG"></View>
			<ImageButton android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:id="@+id/ButtonSkip"
				android:background="@drawable/controls_skip_selector"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"></ImageButton>
			<ImageButton android:layout_width="wrap_content"
				android:id="@+id/ButtonWrong" android:layout_height="wrap_content"
				android:layout_centerVertical="true" android:layout_marginRight="99dp"
				android:layout_alignRight="@id/ButtonSkip" android:background="@drawable/controls_wrong_selector"></ImageButton>
			<ImageButton android:id="@+id/ButtonCorrect"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_centerVertical="true" android:background="@drawable/controls_right_selector"
				android:layout_alignLeft="@id/ButtonSkip" android:layout_marginLeft="99dp"></ImageButton>
		</RelativeLayout>
	</LinearLayout>
	


	
	<View android:id="@+id/PauseImageView"
		android:layout_centerHorizontal="true" android:layout_centerVertical="true"
		android:layout_width="fill_parent" android:layout_height="fill_parent"></View>




</RelativeLayout>