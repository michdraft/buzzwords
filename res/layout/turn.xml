<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:id="@+id/MultiCardLayout">
	<ViewFlipper
		android:id="@+id/ViewFlipper0"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content" 
		android:layout_below="@+id/actionbar">
  <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ReadyLayout" android:orientation="vertical"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ReadyMessageTeam" android:text="TEAMNAMEHERE" android:textSize="30dip" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:layout_marginTop="150dip" android:layout_marginLeft="30dip"></TextView>
<TextView android:layout_below="@id/ReadyMessageTeam" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ReadyMessageText" android:textSize="30dip" android:text="touch when ready!" android:layout_marginLeft="30dip"></TextView>
</LinearLayout>		
		<RelativeLayout
			android:id="@+id/CardLayoutA" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/bg_taboozlecard">
			<TextView
				android:text="CardTitle"
				android:gravity="center"
				android:textSize="32dp"
				android:textColor="#000"
				android:id="@+id/CardTitleA"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:layout_alignParentTop="true" 
				android:paddingBottom="15dp" android:paddingTop="30dp">
			</TextView>
			<ListView 
				android:layout_width="fill_parent" 
				android:divider="@null" 
				android:dividerHeight="0px" 
				android:paddingBottom="30dp" 
				android:id="@+id/CardWordsA" 
				android:layout_height="wrap_content" 
				android:layout_below="@+id/CardTitleA" 
				android:paddingTop="30dp">
			</ListView>
			
		
</RelativeLayout>
		<RelativeLayout
		android:id="@+id/CardLayoutB" android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@drawable/bg_taboozlecard">
		<TextView
			android:text="CardTitle"
			android:gravity="center"
			android:textSize="32dp"
			android:textColor="#000"
			android:id="@+id/CardTitleB"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_alignParentTop="true" 
			android:paddingBottom="15dp" android:paddingTop="30dp">
		</TextView>
		<ListView 
			android:layout_width="fill_parent" 
			android:divider="@null" 
			android:dividerHeight="0px" 
			android:paddingBottom="30dp" 
			android:id="@+id/CardWordsB" 
			android:layout_height="wrap_content" 
			android:layout_below="@+id/CardTitleB" 
			android:paddingTop="30dp">
		</ListView>
		
	</RelativeLayout>
	</ViewFlipper>
	<RelativeLayout
	android:layout_width="fill_parent"
	android:id="@+id/actionbar"
	android:background="@drawable/titlebar_blue" android:layout_height="wrap_content">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="60s" android:id="@+id/Timer"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_marginRight="10dp"
		android:textSize="16dp"
		android:paddingTop="5dp"
		android:textColor="#FFFFFF">
	</TextView>
	</RelativeLayout><ImageView android:layout_below="@id/CardWordsA" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:id="@+id/WrongStamp" android:background="@drawable/wrong_stamp"></ImageView>

<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ButtonCancelWrong" android:background="@drawable/cancelwrong" android:layout_above="@+id/lowbar" android:layout_alignParentLeft="true"></ImageButton><ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ButtonConfirmWrong" android:background="@drawable/wrong" android:layout_above="@+id/lowbar" android:layout_alignParentRight="true"></ImageButton>
<RelativeLayout android:layout_width="wrap_content" android:id="@+id/lowbar" android:layout_alignParentBottom="true" android:layout_below="@+id/ViewFlipper0" android:layout_marginLeft="10px" android:layout_height="wrap_content">
<ImageButton android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_width="wrap_content" android:background="@drawable/wrong" android:id="@+id/ButtonWrong" android:layout_marginLeft="60dip"></ImageButton>
<ImageButton android:layout_height="wrap_content" android:background="@drawable/skip" android:layout_width="wrap_content" android:id="@+id/ButtonSkip" android:layout_centerInParent="true" android:layout_toRightOf="@+id/ButtonWrong"></ImageButton>
<ImageButton android:layout_height="wrap_content" android:background="@drawable/correct" android:layout_width="wrap_content" android:id="@+id/ButtonCorrect" android:layout_alignWithParentIfMissing="true" android:layout_toRightOf="@+id/ButtonSkip"></ImageButton>

</RelativeLayout>



</RelativeLayout>