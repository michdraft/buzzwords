<RelativeLayout android:id="@+id/Turn_Root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_bluegradient">

    <TextView android:id="@+id/TurnTimesUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="60dp"
        android:textStyle="bold"
        android:text="Time's Up!"
        android:gravity="center"
        android:visibility="invisible"
        android:textColor="@color/white"
        />

    <LinearLayout android:id="@+id/Turn_PauseTextGroup"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_centerInParent="true"
        android:visibility="invisible">

        <TextView android:id="@+id/TurnPausedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:textStyle="bold"
            android:text="Paused"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />

        <TextView android:id="@+id/TurnPausedSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="Tap to Unpause"
            />

    </LinearLayout>

    <LinearLayout android:id="@+id/Turn_MasterLayout"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">
        
        <RelativeLayout android:id="@+id/Turn_TimerBar"
            android:layout_width="wrap_content"
            android:layout_height="35dp">
            
            <ImageView android:id="@+id/TurnTimerBG"
                android:background="@color/genericBG"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                />

            <View android:id="@+id/TurnTimerTrim"
                android:layout_height="10dp"
                android:layout_width="fill_parent"
                android:background="@color/genericBG_trim"
                android:layout_below="@id/TurnTimerBG"
                />

            <ImageView android:id="@+id/TurnTimerFill"
                android:layout_below="@+id/TurnTimerBG"
                android:layout_alignParentTop="true"
                android:background="@color/teamA_text"
                android:layout_height="23dp"
                android:layout_marginTop="1dp"
                android:layout_alignParentLeft="true"
                android:layout_width="280dp"
                />
                
            <View android:id="@+id/Turn_TimerFrame"
                android:layout_height="25dp"
                android:background="@drawable/turn_timer_frame"
                android:layout_width="70dp"
                android:layout_alignParentRight="true"
                />
                
            <TextView android:id="@+id/Timer"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#FFFFFF"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:includeFontPadding="false"
                android:layout_height="24dp"
                android:textSize="22dp"
                />
                
        </RelativeLayout>

        <ViewFlipper android:id="@+id/Turn_ViewFlipper"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent">

            <RelativeLayout android:id="@+id/CardLayoutA"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_height="fill_parent">
                
                <ImageView android:id="@+id/StatusImageA"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    />

                <LinearLayout android:id="@+id/CardA_Words"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                    
                    <TextView android:id="@+id/CardTitleA"
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textSize="40dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#FFFFFF"
                        android:layout_centerHorizontal="true"
                        />
                        
                    <LinearLayout android:id="@+id/CardA_BadWords"
                        android:layout_width="fill_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/CardTitleA">
                        
                        <TextView android:id="@+id/CardA_BadWord0"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="34dp"
                            android:textStyle="bold"
                            android:textColor="@color/teamA_CardText"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            />
                            
                        <TextView android:id="@+id/CardA_BadWord1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="34dp"
                            android:textStyle="bold"
                            android:textColor="@color/teamA_CardText"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            />
                            
                        <TextView android:id="@+id/CardA_BadWord2"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="34dp"
                            android:textStyle="bold"
                            android:textColor="@color/teamA_CardText"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            />
                            
                        <TextView android:id="@+id/CardA_BadWord3"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="34dp"
                            android:textStyle="bold"
                            android:textColor="@color/teamA_CardText"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            />
                            
                        <TextView android:id="@+id/CardA_BadWord4"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="34dp"
                            android:textStyle="bold"
                            android:textColor="@color/teamA_CardText"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            />
                            
                    </LinearLayout>
                    
                </LinearLayout>
                
            </RelativeLayout>

            <RelativeLayout android:id="@+id/CardLayoutB"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_height="fill_parent">
                
                <ImageView android:id="@+id/StatusImageB"
                    android:layout_alignParentTop="true"
                    android:layout_height="50dip"
                    android:layout_width="50dip"
                    android:layout_alignParentRight="true"
                    />

                <LinearLayout android:id="@+id/CardB_Words"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    
                    <TextView android:id="@+id/CardTitleB"
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textSize="40dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_centerInParent="true"
                    	/>
                        
                    <LinearLayout android:id="@+id/CardB_BadWords"
                        android:layout_width="fill_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        
                        <TextView android:id="@+id/CardB_BadWord0"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="34dp"
                            android:textStyle="bold"
                            android:textColor="@color/teamA_CardText"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            />
                            
                        <TextView android:id="@+id/CardB_BadWord1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="34dp"
                            android:textStyle="bold"
                            android:textColor="@color/teamA_CardText"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            />
                            
                        <TextView android:id="@+id/CardB_BadWord2"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="34dp"
                            android:textStyle="bold"
                            android:textColor="@color/teamA_CardText"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            />
                            
                        <TextView android:id="@+id/CardB_BadWord3"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="34dp"
                            android:textStyle="bold"
                            android:textColor="@color/teamA_CardText"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            />
                            
                        <TextView android:id="@+id/CardB_BadWord4"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="34dp"
                            android:textStyle="bold"
                            android:textColor="@color/teamA_CardText"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            />
                            
                    </LinearLayout>
                    
                </LinearLayout>
                
            </RelativeLayout>

        </ViewFlipper>
        
        <!-- Grouping for buttons on the bottom -->
        <RelativeLayout android:id="@+id/Turn_LowBar"
            android:layout_width="fill_parent"
            android:layout_height="90dp">

            <View android:id="@+id/TurnLowBarBG"
                android:layout_width="fill_parent"
                android:background="@color/genericBG"
                android:layout_marginTop="40dp"
                android:layout_alignParentBottom="true"
                android:layout_height="45dp"
                />
                 
            <View android:id="@+id/TurnLowBarTrim"
                android:layout_height="10dp"
                android:layout_width="fill_parent"
                android:background="@color/genericBG_trim"
                android:layout_alignTop="@id/TurnLowBarBG"
                />

            <ImageButton android:id="@+id/ButtonSkip"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/controls_skip_selector"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
                
            <ImageButton android:id="@+id/ButtonWrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="99dp"
                android:layout_alignRight="@id/ButtonSkip"
                android:background="@drawable/controls_wrong_selector"
                />
                
            <ImageButton android:id="@+id/ButtonCorrect"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/controls_right_selector"
                android:layout_alignLeft="@id/ButtonSkip"
                android:layout_marginLeft="99dp"
                />
                
        </RelativeLayout>
        
    </LinearLayout>

    <!--  View to unpause game on touch -->
    <View android:id="@+id/PauseImageView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

</RelativeLayout>