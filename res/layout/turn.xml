<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:id="@+id/MultiCardLayout">
	<ViewFlipper
		android:id="@+id/ViewFlipper0"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content" 
		android:layout_below="@+id/actionbar">
		<RelativeLayout
			android:id="@+id/CardLayoutA" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView
				android:gravity="center"
				android:id="@+id/CardTitleA"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:layout_alignParentTop="true" 
				android:paddingBottom="15dp" android:paddingTop="30dp" android:textColor="#FFF" android:textStyle="bold" android:typeface="serif" android:textSize="40dp">
			</TextView>
			<ListView 
				android:layout_width="fill_parent" 
				android:divider="@null" 
				android:dividerHeight="0px" 
				android:id="@+id/CardWordsA" 
				android:layout_height="wrap_content" 
				android:layout_below="@+id/CardTitleA" 
				android:listSelector="@android:color/transparent"
				android:paddingBottom="10dp" android:paddingTop="10dp">
			</ListView>
			
		
</RelativeLayout>
		<RelativeLayout
		android:id="@+id/CardLayoutB" android:layout_height="wrap_content" android:layout_width="wrap_content">
		<TextView
			android:text="CardTitle"
			android:gravity="center"
			android:id="@+id/CardTitleB"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_alignParentTop="true" 
			android:paddingBottom="15dp" android:paddingTop="30dp" android:textColor="#FFF" android:textStyle="bold" android:typeface="serif" android:textSize="40dp">
		</TextView>
		<ListView 
			android:layout_width="fill_parent" 
			android:divider="@null" 
			android:dividerHeight="0px" 
			android:id="@+id/CardWordsB" 
			android:layout_height="wrap_content" 
			android:layout_below="@+id/CardTitleB" 
			android:listSelector="@android:color/transparent"
			android:paddingBottom="10dp" android:paddingTop="10dp">
		</ListView>
		
	</RelativeLayout>
	</ViewFlipper>
	<RelativeLayout
	android:id="@+id/actionbar"
	android:layout_height="wrap_content" android:layout_width="wrap_content"><ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TurnTimerBG" android:background="@drawable/timer_bg"></ImageView><ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TurnTimerFill" android:layout_below="@+id/TurnTimerBG" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_marginRight="2dp" android:background="@drawable/timer_fill_blue" android:layout_marginTop="3dp"></ImageView><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="60s" android:id="@+id/Timer" android:layout_alignParentRight="true" android:textSize="16dp" android:textColor="#FFFFFF" android:layout_below="@+id/TurnTimerFill" android:layout_alignParentTop="true" android:layout_marginTop="5dp" android:layout_marginRight="4dp">
	</TextView>
	
	

</RelativeLayout><ImageView android:layout_below="@id/CardWordsA" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:id="@+id/WrongStamp" android:background="@drawable/wrong_stamp"></ImageView>

<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ButtonCancelWrong" android:background="@drawable/cancelwrong" android:layout_above="@+id/lowbar" android:layout_alignParentLeft="true" android:layout_marginBottom="2dp"></ImageButton><ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ButtonConfirmWrong" android:background="@drawable/wrong" android:layout_above="@+id/lowbar" android:layout_alignParentRight="true" android:layout_marginBottom="2dp"></ImageButton><ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/PauseImageView" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:background="@drawable/paused"></ImageView>
<RelativeLayout android:layout_width="wrap_content" android:id="@+id/lowbar" android:layout_alignParentBottom="true" android:layout_height="wrap_content" android:paddingLeft="2dp" android:background="@drawable/controls_bg">
	<ImageButton 
		android:layout_alignParentLeft="true" 
		android:layout_width="wrap_content" 
		android:background="@drawable/wrong_selector" 
		android:id="@+id/ButtonWrong"
		android:layout_marginLeft="4dp" android:layout_height="wrap_content"></ImageButton>
	<ImageButton 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:id="@+id/ButtonSkip" 
		android:layout_toRightOf="@+id/ButtonWrong"
		android:background="@drawable/controls_skip_selector" android:layout_marginLeft="5dp" android:layout_marginTop="5dp"></ImageButton>
	<ImageButton 
		android:id="@+id/ButtonCorrect" 
		android:layout_toRightOf="@+id/ButtonSkip" 
		android:background="@drawable/controls_right_selector" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp"></ImageButton>
</RelativeLayout>

</RelativeLayout>