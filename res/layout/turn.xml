<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:id="@+id/MultiCardLayout" android:background="@drawable/bg_bluegradient">
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TurnTimesUp" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:textSize="60dp" android:textStyle="bold" android:text="Time's Up!" android:gravity="center" android:visibility="invisible"></TextView><LinearLayout android:layout_height="wrap_content" android:id="@+id/Turn_PauseTextGroup" android:orientation="vertical" android:layout_width="fill_parent" android:layout_centerInParent="true" android:visibility="invisible"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="60dp" android:textStyle="bold" android:id="@+id/TurnPausedText" android:text="Paused" android:layout_gravity="center"></TextView><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:id="@+id/TurnPausedSubText" android:textSize="20dp" android:layout_gravity="center" android:text="Tap to Unpause"></TextView></LinearLayout><ViewFlipper
		android:id="@+id/ViewFlipper0"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content" 
		android:layout_below="@+id/actionbar" android:layout_centerVertical="true">
		<RelativeLayout
			android:id="@+id/CardLayoutA" android:layout_width="wrap_content" android:layout_height="wrap_content"><ImageView android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:id="@+id/StatusImageA" android:layout_width="50dip" android:layout_height="50dip"></ImageView>
			<TextView
				android:gravity="center"
				android:id="@+id/CardTitleA"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:layout_alignParentTop="true" 
				android:textColor="#FFF" android:textStyle="bold" android:typeface="serif" android:textSize="40dp" android:paddingTop="10dp" android:paddingBottom="10dp">
			</TextView>
			<ListView 
				android:layout_width="fill_parent" 
				android:divider="@null" 
				android:dividerHeight="0px" 
				android:id="@+id/CardWordsA" 
				android:layout_height="wrap_content" 
				android:layout_below="@+id/CardTitleA" 
				android:listSelector="@android:color/transparent"
				android:paddingBottom="10dp" android:paddingTop="10dp">
			</ListView>
			
		

</RelativeLayout>
		<RelativeLayout
		android:id="@+id/CardLayoutB" android:layout_height="wrap_content" android:layout_width="wrap_content"><ImageView android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:id="@+id/StatusImageB" android:layout_height="50dip" android:layout_width="50dip"></ImageView>
		<TextView
			android:text="CardTitle"
			android:gravity="center"
			android:id="@+id/CardTitleB"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_alignParentTop="true" 
			android:textColor="#FFF" android:textStyle="bold" android:typeface="serif" android:textSize="40dp" android:paddingTop="10dp" android:paddingBottom="10dp">
		</TextView>
		<ListView 
			android:layout_width="fill_parent" 
			android:divider="@null" 
			android:dividerHeight="0px" 
			android:id="@+id/CardWordsB" 
			android:layout_height="wrap_content" 
			android:layout_below="@+id/CardTitleB" 
			android:listSelector="@android:color/transparent"
			android:paddingBottom="10dp" android:paddingTop="10dp">
		</ListView>
		
	</RelativeLayout>
	</ViewFlipper>
	<RelativeLayout
	android:id="@+id/actionbar"
	android:layout_width="wrap_content" android:layout_height="wrap_content"><ImageView android:id="@+id/TurnTimerBG" android:layout_height="30dp" android:background="@color/genericBG" android:layout_width="fill_parent"></ImageView><ImageView android:id="@+id/TurnTimerFill" android:layout_below="@+id/TurnTimerBG" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:background="@color/teamA_text" android:layout_height="30dp" android:layout_width="fill_parent"></ImageView><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/Timer" android:layout_alignParentRight="true" android:textSize="16dp" android:textColor="#FFFFFF" android:layout_below="@+id/TurnTimerFill" android:layout_alignParentTop="true" android:layout_marginTop="5dp" android:layout_marginRight="4dp">
	</TextView>
	
	

<View android:layout_below="@id/Timer" android:layout_height="10dp" android:layout_width="fill_parent" android:background="@color/genericBG_trim" android:id="@+id/TurnTimerTrim"></View>
</RelativeLayout>


<RelativeLayout android:id="@+id/lowbar" android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:layout_height="90dp">
	
	
	
<View android:layout_width="fill_parent" android:background="@color/genericBG" android:id="@+id/TurnLowBarBG" android:layout_marginTop="40dp" android:layout_alignParentBottom="true" android:layout_height="45dp"></View><View android:layout_height="10dp" android:layout_width="fill_parent" android:background="@color/genericBG_trim" android:id="@+id/TurnLowBarTrim" android:layout_alignTop="@id/TurnLowBarBG"></View><ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/ButtonSkip" android:background="@drawable/controls_skip_selector" android:layout_centerHorizontal="true" android:layout_centerVertical="true"></ImageButton><ImageButton android:layout_width="wrap_content" android:id="@+id/ButtonWrong" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="99dp" android:layout_alignRight="@id/ButtonSkip" android:background="@drawable/controls_wrong_selector"></ImageButton><ImageButton android:id="@+id/ButtonCorrect" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerVertical="true" android:background="@drawable/controls_right_selector" android:layout_alignLeft="@id/ButtonSkip" android:layout_marginLeft="99dp"></ImageButton>
</RelativeLayout><ImageView android:id="@+id/PauseImageView" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:layout_width="fill_parent" android:layout_height="fill_parent"></ImageView>



</RelativeLayout>