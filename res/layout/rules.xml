<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:background="@drawable/bg_generic">

	<View android:id="@+id/Rules_Header_BG"
		android:layout_width="fill_parent" 
		android:background="@color/genericBG_trim"
		android:layout_height="34dp" 
		/>
		
	<View android:id="@+id/Rules_Header_Break" 
		android:layout_width="fill_parent"
		android:layout_height="2dp" 
		android:background="#555555"
		android:layout_marginTop="1dp" 
		android:layout_below="@id/Rules_Header_BG"
		/>
		
	<TextView android:id="@+id/RulesTitle"
		android:text="Rules"
		android:textColor="@color/title" 
		android:textSize="28dp"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content" 
		android:layout_centerHorizontal="true"
		/>
		
	<ScrollView 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_below="@+id/RulesTitle">
		
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:padding="5dp">

			<RelativeLayout android:id="@+id/Rules_Section_Basics"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_below="@+id/RulesTitle">
				
				<RelativeLayout android:id="@+id/Rules_SubHeader_Basics"
					android:layout_height="35dp"
					android:layout_width="100dp" 
					android:layout_below="@id/Rules_Section_Basics"
					android:layout_marginTop="7dp">
					
					<View android:id="@+id/Rules_SubHeader_Basics_BG"
						android:background="@color/genericBG_trim"
						android:layout_width="fill_parent" 
						android:layout_height="fill_parent"
						/>
						
					<View android:id="@+id/Rules_SubHeader_Basics_Fill"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" 
						android:background="@color/genericBG"
						android:layout_margin="4dp"
						/>
						
					<TextView android:id="@+id/Rules_SubHeader_Basics_Text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true" 
						android:textSize="20dp"
						android:text="Basics"
						android:textColor="#FFFFFF"
						/>
						
				</RelativeLayout>

				<TextView android:id="@+id/BasicText01"
					android:layout_below="@id/Rules_SubHeader_Basics"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:padding="8dp" 
					android:text="At its core, Word Frenzy is a team game that pits friends against friends in cutthroat wordplay action. Here are the basics:"
					/>

				<RelativeLayout android:id="@+id/BullettedList"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:layout_below="@id/BasicText01"
					android:paddingLeft="10dp">
					
					<TextView android:id="@+id/BasicText02"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:text="Divide all players into teams of two or more."
						android:textColor="@color/text_subtext" android:layout_below="@id/BullettedList"
						android:paddingLeft="10dp" android:paddingRight="10dp"
						android:paddingBottom="10dp"
						/>
						
					<View android:layout_gravity="center_vertical"
						android:background="#ccc" android:layout_height="6dp"
						android:layout_width="6dp" android:id="@+id/Bullet02"
						android:layout_below="@+id/BullettedList"
						android:layout_marginTop="5dp"
						/>
						
					<TextView android:layout_below="@id/BasicText02"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:id="@+id/BasicText03"
						android:text="Each turn, a team assigns a presenter who must try to get their team to guess as many secret words as possible without saying certain words."
						android:textColor="@color/text_subtext" android:paddingLeft="10dp"
						android:paddingRight="10dp" android:paddingBottom="10dp"
						/>
						
					<View android:id="@+id/Bullet03" 
						android:background="#ccc" 
						android:layout_gravity="center_vertical"
						android:layout_height="6dp"
						android:layout_width="6dp" 
						android:layout_marginTop="5dp"
						android:layout_below="@+id/BasicText02"
						/>
						
					<TextView android:id="@+id/BasicText04" 
						android:layout_below="@id/BasicText03"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:textColor="@color/text_subtext"
						android:paddingLeft="10dp" 
						android:paddingRight="10dp"
						android:paddingBottom="10dp"
						android:text="An opposing player enforces the list of forbidden words."
						/>
						
					<View android:id="@+id/Bullet04"
						android:layout_gravity="center_vertical"
						android:background="#ccc" 
						android:layout_height="6dp"
						android:layout_width="6dp" 
						android:layout_marginTop="5dp"
						android:layout_below="@+id/BasicText03"
						/>
						
					<TextView android:id="@+id/BasicText05"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:textColor="@color/text_subtext"
						android:paddingLeft="10dp" 
						android:paddingRight="10dp"
						android:paddingBottom="10dp" 
						android:layout_below="@id/BasicText04"
						android:text="Points are awarded for each successfully guessed word."
						/>
						
					<View android:id="@+id/Bullet05"
						android:layout_gravity="center_vertical"
						android:background="#ccc"
						android:layout_height="6dp"
						android:layout_width="6dp"
						android:layout_marginTop="5dp"
						android:layout_below="@+id/BasicText04" 
						/>
						
					<TextView android:id="@+id/BasicText06"
						android:text="The team that has the most points at the end of the game wins!"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/text_subtext" 
						android:paddingLeft="10dp"
						android:paddingRight="10dp" 
						android:paddingBottom="10dp"
						android:layout_below="@id/BasicText05"
						/>
						
					<View android:id="@+id/Bullet06"
						android:layout_gravity="center_vertical"
						android:background="#ccc"
						android:layout_height="6dp"
						android:layout_width="6dp"
						android:layout_marginTop="5dp"
						android:layout_below="@+id/BasicText05" 
						/>

				</RelativeLayout>

				<TextView android:id="@+id/RulesPreferencesHeader"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/Rules_SubHeader_Basics" 
					android:text="House Rules: "
					android:visibility="gone"
					/>
					
				<TextView android:id="@+id/RulesPreferences"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dip"
					android:layout_below="@id/RulesPreferencesHeader"
					android:text="CURRENT SETTINGS LIKE RWS, SKIP PENALTY, ROUND TIME GO HERE"
					android:visibility="gone"
					/>

			</RelativeLayout>

			<RelativeLayout android:id="@+id/Rules_Section_Gameplay"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_below="@id/Rules_Section_Basics"
				android:layout_marginTop="7dp">
				
				<RelativeLayout android:id="@+id/Rules_SubHeader_Gameplay"
					android:layout_height="35dp"
					android:layout_below="@+id/Rules_Section_Gameplay"
					android:layout_width="125dp">
					
					<View android:id="@+id/Rules_SubHeader_Buzzing_BG"
						android:background="@color/genericBG_trim"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						/>
						
					<View android:id="@+id/Rules_SubHeader_Buzzing_Fill"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" 
						android:background="@color/genericBG"
						android:layout_margin="4dp"
						/>
						
					<TextView android:id="@+id/Rules_SubHeader_Buzzing_Text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true" android:textSize="20dp"
						android:text="Gameplay"
						android:textColor="#FFFFFF"
						/>
						
				</RelativeLayout>

				<TextView android:id="@+id/GameplayText01"
					android:layout_below="@id/Rules_SubHeader_Gameplay"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Let's take a look at the buttons you'll encounter while playing."
					android:padding="8dp"
					/>
					
				<RelativeLayout android:id="@+id/Gameplay_IconsDescriptions"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:padding="10dp" 
					android:layout_below="@id/GameplayText01">

					<LinearLayout android:id="@+id/RightIconCouple"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:layout_below="@+id/Gameplay_IconsDescriptions"
						android:padding="5dp">
						
						<ImageView android:id="@+id/Gameplay_RightButton"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/controls_right"
							android:contentDescription="Right button icon"
							android:scaleType="centerCrop"
							/>
							
						<TextView android:id="@+id/GameplayText02"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" 
							android:text="Right Button:  For when your team guesses the card correctly. +1 Point."
							android:padding="8dp"
							/>
							
					</LinearLayout>

					<LinearLayout android:id="@+id/SkipIconCouple"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:layout_below="@+id/RightIconCouple" 
						android:padding="5dp">
						
						<ImageView android:id="@+id/Gameplay_SkipButton"
							android:layout_below="@+id/SkipIconCouple"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/controls_skip"
							/>
							
						<TextView android:id="@+id/GameplayText03"
							android:layout_below="@+id/GameplayText02"
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content"
							android:text="Skip Button:  For when you are not up to the challenge of the current word. No penalty."
							android:layout_toRightOf="@+id/Gameplay_SkipButton"
							android:padding="8dp"
							/>
							
					</LinearLayout>

					<LinearLayout android:id="@+id/WrongIconCouple"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@+id/SkipIconCouple"
						android:padding="5dp">
						
						<ImageView android:id="@+id/Gameplay_WrongButton"
							android:layout_below="@+id/WrongIconCouple"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/controls_wrong"
							/>
							
						<TextView android:id="@+id/GameplayText04"
							android:layout_below="@+id/GameplayText03"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Wrong Button:  For when you get called out by the other team for using a forbidden word. -1 Point."
							android:layout_toRightOf="@+id/Gameplay_WrongButton"
							android:padding="8dp"
							/>
							
					</LinearLayout>
					
				</RelativeLayout>

				<TextView android:id="@+id/GameplayTextPausing"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:text="The game can be paused by either hitting the Menu button or tapping the timer at the top.  And don't worry, it will pause if anyone calls and interrupts your awesome game of Word Frenzy."
					android:padding="8dp"
					android:layout_below="@+id/Gameplay_IconsDescriptions"
					/>

			</RelativeLayout>
			
			<RelativeLayout android:id="@+id/Rules_Section_Screens"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				android:layout_below="@id/Rules_Section_Gameplay">
				
				<RelativeLayout android:id="@+id/Rules_SubHeader_Screens" 
					android:layout_height="35dp"
					android:layout_below="@+id/Rules_Section_Screens"
					android:layout_width="160dp">
					
					<View android:id="@+id/Rules_SubHeader_Screens_BG"
						android:background="@color/genericBG_trim"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						/>
						
					<View android:id="@+id/Rules_SubHeader_Screens_Fill"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:background="@color/genericBG"
						android:layout_margin="4dp" 
						/>
						
					<TextView android:id="@+id/Rules_SubHeader_Screens_Text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:textSize="20dp"
						android:textColor="#FFFFFF" 
						android:text="Sample Screens"
						/>
						
				</RelativeLayout>

				<TextView android:id="@+id/ScreensText01"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Now let's take a look at the screens you'll encounter while playing."
					android:layout_below="@id/Rules_SubHeader_Screens"
					/>
					
				<RelativeLayout android:id="@+id/Screens_ScreenDescriptions" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/ScreensText01" 
					android:padding="5dp">

					<LinearLayout android:id="@+id/SetupCouple" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:layout_below="@+id/Screens_ScreenDescriptions"
						android:orientation="horizontal">
						
						<TextView  android:id="@+id/ScreensText02"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Setup Screen: Here you choose which teams will play.  You then select how many turns each team will present.  4 teams with 4 turns a piece means 16 times presenting."
							android:layout_weight="1"
							android:layout_width="150dp"
							/>
							
						<ImageView android:id="@+id/Screens_Setup"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/rules_setup_ss"
							android:contentDescription="Setup Screen Image"
							android:layout_weight="1"
							/>

					</LinearLayout>

					<LinearLayout android:id="@+id/TurnCouple"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:layout_below="@+id/SetupCouple">
						
						<ImageView android:id="@+id/Screens_BlueTurn"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" 
							android:background="@drawable/rules_blueturn_ss"
							android:layout_marginTop="30dp"
							/>
							
						<TextView android:id="@+id/ScreensText03"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Turn Screen:  This is where the fun happens.  At the top of the screen is the word you want people to guess.  Below that are the five words that you may not use.  Have someone police you and make you hit the wrong button if you miss one.  If your team guesses the word, hit the green check mark and get a new word."
							/>
							
					</LinearLayout>

					<LinearLayout android:id="@+id/TurnSumCouple" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:layout_below="@+id/TurnCouple">
						
						<TextView android:id="@+id/Screens_Text04"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Turn Results:  Touch the right, wrong, or skip icons next to each word to correct the results.  Click Next Team when you are ready to pass the phone." android:layout_weight="1"
							/>
							
						<ImageView android:id="@+id/Screens_TurnSum"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" 
							android:background="@drawable/rules_turnsum_ss"
							/>
						
					</LinearLayout>
					
					<LinearLayout android:id="@+id/BuzzmodeCouple"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:layout_below="@+id/TurnSumCouple" 
						android:padding="5dp">
						
						<ImageView android:id="@+id/Screens_Buzzmode"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/rules_buzzer_ss"
							android:layout_below="@+id/GameplayIconsDescriptions"
							android:padding="3dp"
							/>
							
						<TextView android:id="@+id/Screens_Text05"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Buzz Mode: If you have a second phone you can use it as a buzzer to aid in calling out the opponent.  Just run the second phone in buzz mode and when a foul is committed, buzz ruthlessly."
							android:padding="8dp" 
							/>
					</LinearLayout>
				</RelativeLayout>

			</RelativeLayout>
			
			<RelativeLayout android:id="@+id/Rules_Section_Buzzing"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				android:layout_below="@id/Rules_Section_Screens">
				
				<RelativeLayout android:id="@+id/Rules_SubHeader_Buzzing"
					android:layout_height="35dp"
					android:layout_width="125dp"
					android:layout_below="@+id/Rules_Section_Buzzing">
					
					<View android:id="@+id/Rules_SubHeader_Buzzing_BG"
						android:background="@color/genericBG_trim"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						/>
						
					<View android:id="@+id/Rules_SubHeader_Buzzing_Fill"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:background="@color/genericBG"
						android:layout_margin="4dp"/>
						
					<TextView android:id="@+id/Rules_SubHeader_Buzzing_Text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true" android:textSize="20dp"
						android:textColor="#FFFFFF"
						android:text="Buzzing"
						/>
						
				</RelativeLayout>
				
				<TextView android:id="@+id/BuzzingText01" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/Rules_SubHeader_Buzzing"
					android:padding="8dp"
					android:text="This is where the game gets contentious.  To keep the peace, here are some recommended 'buzz worthy' offenses."
					/>
					
				<RelativeLayout android:id="@+id/BuzzingBullettedList"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:paddingLeft="10dp"
					android:layout_below="@id/BuzzingText01">
					
					<TextView android:id="@+id/BuzzingText02"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:textColor="@color/text_subtext"
						android:layout_below="@id/BuzzingBullettedList"
						android:paddingLeft="10dp"
						android:paddingRight="10dp"
						android:paddingBottom="10dp"
						android:text="Explicitly rhyming or phonetically hinting towards any forbidden word.  If you're saying &quot;rhymes with&quot; or &quot;sounds like&quot;, you're heading to buzz city."
						/>
						
					<View android:id="@+id/BuzzingBullet02"
						android:layout_gravity="center_vertical"
						android:background="#ccc"
						android:layout_height="6dp"
						android:layout_width="6dp"
						android:layout_below="@+id/BuzzingBullettedList"
						android:layout_marginTop="5dp"
						/>
						
					<TextView android:id="@+id/BuzzingText03" 
						android:layout_below="@id/BuzzingText02"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/text_subtext"
						android:paddingLeft="10dp"
						android:paddingRight="10dp"
						android:paddingBottom="10dp"
						android:text='Hinting at the spelling or form of the word in any way.  "Starts with," "has x syllables," "short/long word" are all phrases that should be avoided.'
						/>
						
					<View android:id="@+id/BuzzingBullet03"
						android:layout_gravity="center_vertical"
						android:background="#ccc"
						android:layout_height="6dp"
						android:layout_width="6dp"
						android:layout_marginTop="5dp"
						android:layout_below="@+id/BuzzingText02"
						/>
						
					<TextView android:id="@+id/BuzzingText04" 
						android:layout_below="@id/BuzzingText03"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/text_subtext"
						android:paddingLeft="10dp"
						android:paddingRight="10dp"
						android:paddingBottom="10dp"
						android:text="Saying enough of a bad word for people to know what you were going to say."
						/>
						
					<View android:id="@+id/BuzzingBullet04"
						android:layout_gravity="center_vertical"
						android:background="#ccc"
						android:layout_height="6dp"
						android:layout_width="6dp"
						android:layout_marginTop="5dp"
						android:layout_below="@+id/BuzzingText03" 
						/>
						
					<TextView android:id="@+id/BuzzingText05" 
						android:layout_below="@id/BuzzingText04"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textColor="@color/text_subtext"
						android:paddingLeft="10dp" android:paddingRight="10dp"
						android:paddingBottom="10dp"
						android:text="Speaking forbidden words in another language."
						/>
						
					<View android:id="@+id/BuzzingBullet05"
						android:layout_gravity="center_vertical"
						android:background="#ccc"
						android:layout_height="6dp"
						android:layout_width="6dp"
						android:layout_marginTop="5dp"
						android:layout_below="@+id/BuzzingText04"
						/>
					<TextView android:id="@+id/BuzzingText06"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/text_subtext"
						android:paddingLeft="10dp"
						android:paddingRight="10dp"
						android:paddingBottom="10dp"
						android:layout_below="@id/BuzzingText05"
						android:text="Saying any tense of a forbidden word.  For example saying &quot;ate&quot; when &quot;eat&quot; is a forbidden word."
						/>
						
					<View android:id="@+id/BuzzingBullet06"
						android:layout_gravity="center_vertical"
						android:background="#ccc"
						android:layout_height="6dp"
						android:layout_width="6dp"
						android:layout_marginTop="5dp"
						android:layout_below="@+id/BuzzingText05"
						/>
						
					<TextView android:id="@+id/BuzzingText07"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/text_subtext"
						android:paddingLeft="10dp"
						android:paddingRight="10dp"
						android:paddingBottom="10dp"
						android:layout_below="@id/BuzzingText06"
						android:text="Using your body in any way.  This includes pointing, grabbing objects, eye rollings, or dancing.  "
						/>
						
					<View android:id="@+id/BuzzingBullet07"
						android:layout_gravity="center_vertical"
						android:background="#ccc"
						android:layout_height="6dp"
