<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:background="@drawable/bg_generic">

	<View android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/background"></View>
	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_centerInParent="true">
		<ImageView android:id="@+id/logo_ram" android:layout_height="wrap_content"
			android:background="@drawable/logoram" android:layout_width="wrap_content"
			android:layout_centerHorizontal="true"></ImageView>
		<ImageView android:id="@+id/logo_text		"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/logotext" android:layout_below="@+id/logo_ram"
			android:layout_marginTop="10dp"></ImageView>
	</RelativeLayout>

</RelativeLayout>
