<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">
   
   <PreferenceCategory android:title="Hardware">
        <CheckBoxPreference
                android:key="volume_settings"
                android:title="Volume"
                android:defaultValue="true"/>    
        <CheckBoxPreference
         		android:key="vibrate_pref"
                android:title="Vibrate"
                android:defaultValue="true"
                android:summary="Enable vibrate on buzz"/>                   
   </PreferenceCategory>
   
   <PreferenceCategory android:title="Game">
   
         <ListPreference 
           android:key="turn_timer" 
           android:title="Turn Timer Length"
           android:defaultValue="60" 
           android:entryValues="@array/turntime_values" 
           android:entries="@array/turntimes" android:summary="Defaults to 60 seconds"/>      
		   
		<CheckBoxPreference
                android:key="skip_penalty"
                android:title="Skip Penalty"
                android:defaultValue="false"
                android:summary="Subtract a point for skipped cards"/>          

</PreferenceCategory>
   
   <PreferenceCategory android:title="Accessibility">
		<CheckBoxPreference
		        android:key="read_aloud"
                android:title="Read Words Aloud"
                android:defaultValue="false"
                android:summary="Outputs the guess word and bad words to headphones"/>                                                                                
    </PreferenceCategory>
</PreferenceScreen>